<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivity">


    <ScrollView
        android:layout_width="521dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/kknine" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="프로젝트명"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:rotationY="182"
                    android:background="@drawable/kk_grayno" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="보물찾기"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pro" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:background="@drawable/kk_grayno" />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="필드에 숨겨진 보물을 찾는 게임"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/kknine" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="이동방법"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:background="@drawable/kk_grayno"
                    android:rotationY="178" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="WASD키로 이동, SPACE로 점프"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kk_grayno"
                    android:rotationY="178" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="메인카메라에 타겟을 플레이어로
                              지정하여 플레이어의 이동을 따라가게 함"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/kknine" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="사용한 코드"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kk_grayno" />

                <TextView
                    android:layout_width="260dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="If( input.GetKey(KeyCode))를 이용하여
                    플레이어의 이동을 구현"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kk_grayno"
                    android:rotationY="178" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="OnCollisionEnter을 이용하여 item에 물체와
                    캐릭터가 충돌 시 사라지게 함."
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kk_grayno"
                    android:rotationY="178" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="보물을 모두 찾은 후엔 씬 전환을 사용하여
                    z키를 누르면 게임을 재시작 하게 설정"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/kknine" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="추가적 설명"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kk_grayno" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="애니메이션을 이용하여 플레이어의 이동과
마우스 클릭시 칼을 휘두르게 설정"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>